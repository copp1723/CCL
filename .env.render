# Render Production Environment Template
# Copy these to Render environment variables

NODE_ENV=production
PORT=10000

# ðŸš€ Render Deployment Configuration
RENDER_DEPLOYMENT=true
GRACEFUL_STARTUP=true
SERVICE_TIMEOUT_MS=10000
DB_CONNECTION_TIMEOUT_MS=5000
MAX_STARTUP_RETRIES=3

# Database Configuration (will be auto-set by Render)
# DATABASE_URL=postgresql://...

# Security Keys (will be auto-generated by Render)
# ENCRYPTION_KEY=auto-generated
# API_KEY=auto-generated
# CCL_API_KEY=auto-generated
# FLEXPATH_API_KEY=auto-generated

# AI Services (set manually in Render)
# OPENAI_API_KEY=your-openai-api-key-here

# Email Service (optional)
# MAILGUN_API_KEY=your-mailgun-key-here
# MAILGUN_DOMAIN=your-domain.mailgun.org

# Rate Limiting & Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=*
TRUST_PROXY=true

# Monitoring
LOG_LEVEL=info
METRICS_ENABLED=true
HEALTH_CHECK_TIMEOUT=5000
