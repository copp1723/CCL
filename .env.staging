
# Staging Environment Configuration
NODE_ENV=staging
PORT=5000

# Database Configuration
# DATABASE_URL will be provided by hosting platform
DB_POOL_SIZE=10
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=60000

# Authentication
INTERNAL_API_KEY=ccl-staging-2025
JWT_SECRET=ccl-staging-jwt-secret-2025
SESSION_SECRET=ccl-staging-session-secret-2025

# Email Service (Configure when ready)
# MAILGUN_API_KEY=your-mailgun-api-key-here
# MAILGUN_DOMAIN=staging.completecarloans.com

# AI Services (Required for agent functionality)
# OPENAI_API_KEY=your-openai-api-key-here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=200

# Monitoring
LOG_LEVEL=info
METRICS_ENABLED=true
HEALTH_CHECK_TIMEOUT=5000

# Security
CORS_ORIGIN=*
TRUST_PROXY=true

# External APIs (Configure when needed)
# FLEXPATH_API_KEY=your-flexpath-api-key-here
