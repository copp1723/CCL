# Complete Car Loans - Staging Environment Configuration
NODE_ENV=staging
PORT=5000

# Database
DATABASE_URL=your_staging_database_url

# Authentication & Security
INTERNAL_API_KEY=your_secure_staging_api_key
JWT_SECRET=your_jwt_secret_staging
SESSION_SECRET=your_session_secret_staging

# Email Configuration - Onerylie.com Domain
MAILGUN_API_KEY=your_mailgun_api_key
MAILGUN_DOMAIN=onerylie.com
MAILGUN_FROM_EMAIL=noreply@onerylie.com

# OpenAI Integration
OPENAI_API_KEY=your_openai_api_key

# Application Settings
CORS_ORIGIN=https://your-staging-domain.replit.app
TRUST_PROXY=true
LOG_LEVEL=info
METRICS_ENABLED=true

# Rate Limiting (staging - more permissive)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=200

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=10000