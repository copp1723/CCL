# Production Environment Configuration
NODE_ENV=production
PORT=5000

# Database Configuration
# DATABASE_URL will be provided by hosting platform
DB_POOL_SIZE=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=60000

# Authentication (MUST BE CHANGED FOR PRODUCTION)
# INTERNAL_API_KEY=generate-secure-api-key-for-production
# JWT_SECRET=generate-secure-jwt-secret-256-bit
# SESSION_SECRET=generate-secure-session-secret-256-bit

# Email Service (Required for production)
# MAILGUN_API_KEY=your-production-mailgun-api-key
# MAILGUN_DOMAIN=your-production-mailgun-domain

# AI Services (Required for agent functionality)
# OPENAI_API_KEY=your-production-openai-api-key

# Rate Limiting (Production optimized)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
LOG_LEVEL=warn
METRICS_ENABLED=true
HEALTH_CHECK_TIMEOUT=5000

# Security
# CORS_ORIGIN=https://your-production-domain.com
TRUST_PROXY=true

# External APIs
# FLEXPATH_API_KEY=your-production-flexpath-api-key